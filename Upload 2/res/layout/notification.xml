<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/notification_textView_last_call_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Last call statistics"
        android:textColor="#00FF00"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aabbcc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notification_textView_call_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Call 1 "
                android:textColor="#0AB3F1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />

            <TextView
                android:id="@+id/notification_textView_lowest_amplitude_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lowest amplitude"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />

            <TextView
                android:id="@+id/notification_textView_highest_amplitude_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest amplitude"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />

            <TextView
                android:id="@+id/notification_textView_amplitude_average_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/notification_textView_amplitudes_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amplitudes"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_textView_lowest_amplitude_amplitudes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_textView_highest_amplitude_amplitudes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_textView_last_call_amplitude_average_amplitudes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19500"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/notification_textView_decibels_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decibels"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_textView_lowest_amplitude_decibels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_textView_highest_amplitude_decibels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_textView_last_call_amplitude_average_decibels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19500"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_more_linearLayout_high_bp_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notification_textView_high_bp_detected_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="High Bp Detected"
            android:textColor="#FF0000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aabbcc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:baselineAligned="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/notification_more_textView_details_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Details" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_more_textView_average_amplitude_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Average amplitude "
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_more_textView_allowed_amplitude_range_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allowed amplitude range"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_more_textView_last_calls_average_amplitude_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last calls average amplitude"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/notification_more_textView_amplitude_increase_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Increase in amplitudes"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/notification_more_textView_advaned_amplitudes_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amplitudes"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#777" />

                    <TextView
                        android:id="@+id/notification_more_textView_average_amplitude_amplitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0f0" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#777" />

                    <TextView
                        android:id="@+id/notification_more_textView_allowed_amplitude_range_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20000"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#00f" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#777" />

                    <TextView
                        android:id="@+id/notification_more_textView_last_calls_average_amplitude_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20000"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#777" />

                    <TextView
                        android:id="@+id/notification_more_textView_amplitude_increase_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19500"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#f00" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#777" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>