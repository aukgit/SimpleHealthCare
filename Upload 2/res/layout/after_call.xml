<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/stats_ui_textView_call_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Call 1 "
                android:textColor="#0AB3F1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />

            <TextView
                android:id="@+id/stats_ui_textView_lowest_amplitude_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lowest amplitude"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />

            <TextView
                android:id="@+id/stats_ui_textView_highest_amplitude_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest amplitude"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />

            <TextView
                android:id="@+id/stats_ui_textView_amplitude_range_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/stats_ui_textView_amplitudes_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amplitudes"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/stats_ui_textView_lowest_amplitudes_amplitudes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/stats_ui_textView_highest_amplitudes_amplitudes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/stats_ui_textView_amplitude_range_amplitudes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19500"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/stats_ui_textView_decibels_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decibels"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/stats_ui_textView_lowest_amplitude_decibels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/stats_ui_textView_highest_amplitude_decibels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />

                <TextView
                    android:id="@+id/stats_ui_textView_amplitude_range_decibels"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19500"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#777" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>